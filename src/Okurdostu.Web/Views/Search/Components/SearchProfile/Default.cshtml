@model List<Okurdostu.Data.Model.User>
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <div class="row no-gutters pt-1">
            <div class="col-auto pr-1 pl-1">
                @if (item.PictureUrl != null)
                {
                    <a href="/@item.Username"> <img src="@item.PictureUrl" class="profil-image rounded-pill " style="width:50px; height:50px" /> </a>
                }
                else
                {
                    <a href="/@item.Username"> <img src="~/svg/user.svg" class="profil-image rounded-pill " style="width:50px; height:50px;" /> </a>
                }
            </div>
            <div class="col p-0"> <a class="od text-break" href="/@item.Username"> <h6 style="font-size:15px !important">@item.FullName<br /> <span class="text-black-50">(@Html.Raw("@" + item.Username))</span> <br /> <span class="text-black-50 small font-weight-bold">@Html.Raw(item.Biography?.Replace("\r\n", "<br/>"))</span> </h6> </a> </div>
        </div>
        <hr class="mb-1 mt-1" />
    }
}
else if (TempData["q"] != null)
{
    <div class="font-weight-bold text-black-50 text-center pt-4 pb-2"> <p>Sonuç yok.</p> <p class="small">Bu arama için eşlesen kişi bulunamadı...</p> </div>
}