@model Okurdostu.Web.Models.NeedModel

@{
    ViewData["Title"] = "İhtiyaç kampanyası oluşturma";
    Layout = "~/Views/Shared/_LayoutOkurdostu.cshtml";
}
<partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
@if (TempData["CreateNeedError"] != null && TempData["CreateNeedError"].ToString() != "Active education")
{
    <div class="alert alert-secondary text-center font-weight-bold" role="alert">
        <span class="text-danger">
            @Html.Raw(TempData["CreateNeedError"])
        </span>
        @if (TempData["CausingErrorNeedLink"] != null)
        {
            <br />
            <span class="text-black-50">
                Hataya sebep veren kampanyanızı görmek için:
                <a class="od" href="@Html.Raw(TempData["CausingErrorNeedLink"].ToString())"> Tıklayınız</a>
            </span>
        }
    </div>
}
<p class="font-weight-bold text-black-50 text-center ">
    Birinci aşama
</p>
<p class="font-weight-bold text-black-50 text-center small">
    Burada verdiğiniz bilgileri ikinci aşamada düzenleyebilirsiniz merak etmeyin.
</p>
@using (Html.BeginForm("Create", "Need", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group">
            <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">
                Başlık
            </span>
            <div>
                <input class="form-control font-weight-bold" placeholder="Hedeflerim için bunlara ihtiyacım var" asp-for="Title" />
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger font-weight-bold" })
            </div>
            <span class="small text-black-50 font-weight-bold">İhtiyaç kampanyanızın için dikkat çekici bir başlık seçiniz</span>
        </div>
        <div class="form-group">
            <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">
                Açıklama
            </span>
            <div>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off", @style = "height:300px;" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger font-weight-bold" })
            </div>
            <p class="small text-black-50 font-weight-bold text-center">
                Kendinizi kısa bir şekilde tanıtarak, aşağıda ki sorulara veya benzerlerini cevaplayan bir metin yazınız:
                <br />
                * Bu kampanya ile elde ettiğiniz şeyler sizin eğitim hayatınıza nasıl bir etkisi olacak?
                <br />
                * Neden bu kampanyayı oluşturuyorsunuz?
            </p>
        </div>
        <div class="modal-footer pb-0 pt-1">
            <input type="submit" value="2. Aşamaya geç" class="btn btn-outline-purple rounded-custom w-100 font-weight-bold" />
        </div>
    </div>
}