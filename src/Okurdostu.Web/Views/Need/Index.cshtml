    [style*="--levitate:"] {
        box-shadow: 0 calc(var(--levitate) * .5px) calc(var(--levitate) * .6px) rgba(0,0,0,calc(var(--levitate) * .013)),0 calc(var(--levitate) * 1px) calc(var(--levitate) * 1.2px) rgba(0,0,0,calc(var(--levitate) * .013)),0 calc(var(--levitate) * 2px) calc(var(--levitate) * 2.4px) rgba(0,0,0,calc(var(--levitate) * .013)),0 calc(var(--levitate) * 4px) calc(var(--levitate) * 4.4px) rgba(0,0,0,calc(var(--levitate) * .013));
        transform: translateY(calc(var(--levitate) * -1.2px))
    }

    [style*="--levitate-hvr:"] {
        transition: all .4s ease
    }

        [style*="--levitate-hvr:"]:focus, [style*="--levitate-hvr:"]:hover {
            box-shadow: 0 calc(var(--levitate-hvr) * .5px) calc(var(--levitate-hvr) * .6px) #6c63ff,0 calc(var(--levitate-hvr) * 1px) calc(var(--levitate-hvr) * 1.2px) #6c63ff,0 calc(var(--levitate-hvr) * 2px) calc(var(--levitate-hvr) * 2.4px) #6c63ff,0 calc(var(--levitate-hvr) * 4px) calc(var(--levitate-hvr) * 4.4px) rgba(0,0,0,calc(var(--levitate-hvr) * .013));
            transform: translateY(calc(var(--levitate-hvr) * -1.2px))
        }
</style>
@{
    //bu sayfa aşağıda ki türde linklerle gelir:

    // -/ihtiyaclar :                                               bütün ihtiyaçlar
    // -/ihtiyaclar/universite-namefriendly :                       üniversitenin öğrencilerinin bütün ihtiyaçları
    // -/ihtiyaclar/{herhangi bir arama} :                          filtrelenmiş texte göre ihtiyaçlar


    // -/ihtiyaclar/universite-namefriendly/jquery
    //jquery ile bu sayfayı üniversite sayfasında ki ihtiyaçlar sekmesine çağırıyorum ve
    //parametreye jquery yolladığım zaman - TempData["Jquery"]'nın içine 'Yes' diye bir değer atıyorum,
    //ve sayfanın designi buna ve bununla bağlantılı isRequestComingFromUniversityPage'e göre değişiyor.

    //aspnetmvc'de renderaction kullanırken sayfanın hangi url tarafından çağrıldığını kontrol ediyordum designi ona göre ayarlıyordum
    //buda bir nevi aynı bug olacağını sanmıyorum ama yine de kontrol et.
}

@if (TempData["Jquery"] == "Yes")
{
    isRequestComingFromUniversityPage = true;
}
else
{
    isRequestComingFromUniversityPage = false;
}
@{
    int i = 0; //üniversite sayfasında geliyorsa istek en fazla 6 tane kaydı görüntülemek için aşağıda ki bir foreach'da kullanılıyor

    var viewbagUniversity = new Okurdostu.Data.Model.University();
    if (ViewBag.University != null)
    {
        viewbagUniversity = (ViewBag.University as Okurdostu.Data.Model.University);
    }
}

@if (!isRequestComingFromUniversityPage)
{
    Layout = "~/Views/Shared/_LayoutOkurdostu.cshtml";
    ViewData["Title"] = TempData["ListelePageTitle"];
}
else
{
    Layout = null;
}

@if (!isRequestComingFromUniversityPage)
{
    <button class="btn btn-outline-purple font-weight-bold float-right filter-button rounded-custom" data-toggle="modal" data-target="#filtre" style="cursor:pointer;">
        İhtiyaçları filtrele
    </button>
    <br />
    <br />
    if (viewbagUniversity.Name != null)
    {
        <div class="text-center  font-weight-bold">
            <a class="od" href="/universite/@Html.Raw(viewbagUniversity.FriendlyName)">@Html.Raw(viewbagUniversity.Name)</a>
            <br />
            <span class="text-black-50" style="font-size:13.5px;">Öğrencilerinin ihtiyaçlarının sonuçları</span>
            <br />
            <a class="od font-weight-bold" href="/universite/@Html.Raw(viewbagUniversity.FriendlyName)" style="font-size:15px;">Üniversitenin sayfasını gör</a>
        </div>
        <hr class="mb-1 mt-1" />
    }
}
@if (Model.Count > 0)
{
    <div class="row pt-2">
        @foreach (Okurdostu.Data.Model.Need item in Model)
        {
            i++;
            if (i > 6 && isRequestComingFromUniversityPage)
            {
                //universite sayfasından geliyorsa istek en fazla 6 tane ilan ihtiyacını görüntüle
                break;
            }
            string link = item.User.Username + "/ihtiyac" + "/" + item.FriendlyTitle + "/" + item.Id;
            <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 pb-2 text-black-50" onclick="window.location='/@link'" style="cursor:pointer; ">
                <div class="card rounded-custom" style="--levitate-hvr: 10;">
                    <div class="card-body p-0 od-dark">
                        <div class="text-center pt-2 pr-3 pl-3">
                            <img src="@item.User.PictureUrl" class="rounded-custom" style=" height:200px; width:100%;" />
                            <p class="font-weight-bold mb-0 ">@item.User.FullName</p>
                            <span class="small font-weight-bold text-black-50">@item.User.UserEducation.OrderByDescending(x => x.StartYear).Where(x => x.IsConfirmed == true && x.IsRemoved != true).FirstOrDefault().University.Name</span>
                        </div>
                        <p class="card-title font-weight-bold pr-1 pl-1 text-center" style="max-height:65px;">
                            @if (item.Title.Length >= 30)
                            {
                                @Html.Raw(item.Title.Substring(0, 27) + "...");
                            }
                            else
                            {
                                @item.Title;
                            }
                        </p>
                        <div class="progress rounded-custom mt-2 mr-2 ml-2">
                            <div class="progress-bar progress-bar-striped progress-bar-animated bg-od" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%"></div>
                        </div>
                        @{
                            string Price = item.TotalCharge.ToString().NormalizePrice().Replace(".", ",");
                        }
                        <h6 class="text-center mt-0">
                            <span class="font-weight-bold">
                                0 &#8378
                            </span>
                            <span class="small text-black-50 font-weight-bold">
                                toplandı, hedef
                            </span>
                            <span class="font-weight-bold">
                                @Price &#8378
                            </span>
                        </h6>
                        <div class="mb-2 mt-2 mr-3 ml-3">
                            <a href="/@link" class="btn-block btn-purple text-center font-weight-bold">İhtiyaçlarını incele</a>
                        </div>
                    </div>
                </div>
            </div>
            //6 tane kayıtı girdikten sonra buton oluşturması için
            if (i == 6 && !isRequestComingFromUniversityPage)
            {
                <div class="col-12">
                    <hr class="mb-2" />
                    <a href="/Kaydol?ref=ihtiyac" class="btn btn-info rounded-custom btn-block font-weight-bold fontrem1">Kaydolarak sende ihtiyaç oluşturabilirsin!</a>
                    <hr class="mt-2" />
                </div>
            }
        }
    </div>
    if (isRequestComingFromUniversityPage)
    {
        <center>
            <a class="btn border od btn-block rounded-custom font-weight-bold" href="/ihtiyaclar/@Html.Raw(viewbagUniversity.FriendlyName)">@Html.Raw(viewbagUniversity.Name)'nin bütün ihtiyaçlarını gör</a>
            @if (Model.Count - 6 > 0)
            {
                <hr class="mb-1 mt-1" />
                <span class="text-black-50 font-weight-bold small">@Html.Raw(viewbagUniversity.Name) ile alakalı daha fazla ihtiyaç var</span>
            }
        </center>
    }
}
else
{
    if (isRequestComingFromUniversityPage)
    {
        <div class="justify-content-center text-center pt-2">
            <p class="text-black-50 font-weight-bold mb-0" style="">@ViewBag.tagUniversityName öğrencilerine ait hiç ihtiyaç bulunamadı.</p>
        </div>
    }
    else
    {
        <div class="justify-content-center text-center pt-2">
            <p class="text-black-50 font-weight-bold mb-0" style="">@ViewBag.Tag@ViewBag.tagUniversityName aramasıyla ilgili <br /> hiç ihtiyaç bulunamadı.</p>
            <a href="/ihtiyaclar" class="font-weight-bold od" style="font-size:15px;">İhtiyaçlara geri dön</a>
        </div>
    }
}
@if (!isRequestComingFromUniversityPage)
{
    <div class="modal fade" id="filtre" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content" style="background: transparent;">
                <div class="modal-body bg-light" style="border-radius: 25px;">
                    <div class="form-group text-center">
                        <p class="font-weight-bold text-black-50" style="font-size:14px;">Öğrenci adı veya soyadı. Kampanya başlığı, kampanyanın içerikleri</p>
                        <input type="text" class="form-control rounded-custom font-weight-bold text-black-50" autocomplete="off" value="@Html.Raw(ViewBag.Tag)" id="filtreText" placeholder="İhtiyaçları keşfet">
                    </div>
                    <button type="submit" class="btn btn-outline-purple btn-block rounded-custom font-weight-bold" id="btnFiltre" name="btnFiltre">Filtrele</button>
                    <button class="btn btn-outline-secondary rounded-custom font-weight-bold btn-block" data-dismiss="modal">Vazgeçtim</button>
                    <hr />
                    <button class="btn btn-outline-purple btn-block mb-1 font-weight-bold" type="button" data-toggle="collapse" data-target=".multi-collapse" aria-expanded="false">Üniversiteler</button>
                    @{
                        Okurdostu.Data.OkurdostuContext Context = new Okurdostu.Data.OkurdostuContext();
                        var allSchools = Context.University.ToList().OrderBy(x => x.Name);
                    }
                    @foreach (var item in allSchools)
                    {
                        <div class="collapse multi-collapse" id="@item.FriendlyName">
                            <a class="od font-weight-bold" href="/ihtiyaclar/@item.FriendlyName">
                                <div class="card card-body bg-transparent p-2 pt-1 pb-1">@Html.Raw(item.Name)</div>
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $("#btnFiltre").click(function (event) {
                if ($("#filtreText").val().length > 0) {
                    event.preventDefault();
                    url = "/ihtiyaclar/" + $("#filtreText").val();
                    window.location.href = url
                }
                else {
                    $('#filtre').modal('hide')
                }
            });
        })
    </script>
}