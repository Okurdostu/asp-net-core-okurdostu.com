@model Okurdostu.Web.Models.ProfileModel
@using (Html.BeginForm("EditUsername", "Account", FormMethod.Post))
{
    <div class="form-horizontal">
        <div class="form-group"> <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">Onay parolası</span> @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control font-weight-bold", @autocomplete = "new-password" } }) @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger font-weight-bold" }) </div>
        <div class="form-group"> <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">Yeni kullanıcı adı</span> @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control font-weight-bold", @autocomplete = "off" } }) @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger font-weight-bold" }) </div>
        <div class="modal-footer pb-0 pt-1"> <button class="btn btn-outline-secondary rounded-custom font-weight-bold btn-block" data-dismiss="modal">Vazgeçtim</button> <input type="submit" value="Değiştir" class="btn btn-outline-purple rounded-custom w-100 font-weight-bold" /> </div>
    </div>
}