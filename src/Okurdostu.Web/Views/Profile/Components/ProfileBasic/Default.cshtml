@model Okurdostu.Web.Models.ProfileModel
<center> <span class="small text-black-50 font-weight-bold"> Profil fotoğrafı değişikliği için profilinizde ki fotoğrafa tıklayın. </span></center>
<hr class="mb-1 mt-0" />
@using (Html.BeginForm("ProfileBasic", "Account", FormMethod.Post))
{
    <div class="form-horizontal font-weight-bold text-black-50">
        <div class="form-group"> @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label pl-2 pr-0 font-weight-bold text-black-50" }) @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control font-weight-bold" } }) @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger font-weight-bold" }) </div>
        <div class="form-group"> @Html.LabelFor(model => model.Biography, htmlAttributes: new { @class = "control-label pl-2 pr-0 font-weight-bold text-black-50" }) @Html.TextAreaFor(model => model.Biography, new { @class = "form-control font-weight-bold", style = "width:100%; min-height:125px;" }) @Html.ValidationMessageFor(model => model.Biography, "", new { @class = "text-danger font-weight-bold" }) </div>
        <div class="modal-footer pb-0 pt-1"> <button class="btn btn-outline-secondary rounded-custom font-weight-bold btn-block" data-dismiss="modal">Vazgeçtim</button> <input type="submit" value="Kaydet" class="btn btn-outline-purple rounded-custom w-100 font-weight-bold" /> </div>
    </div>
}