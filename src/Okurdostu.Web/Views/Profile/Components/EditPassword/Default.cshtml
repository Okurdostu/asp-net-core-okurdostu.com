@model Okurdostu.Web.Controllers.Api.PasswordController.PasswordModel
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "password-changing-form" }))
{
    <div class="form-horizontal">
        <div class="form-group"> <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">Onay parolası</span> @Html.EditorFor(model => model.PasswordConfirmPassword, new { htmlAttributes = new { @class = "form-control font-weight bold", @autocomplete = "off" } }) @Html.ValidationMessageFor(model => model.PasswordConfirmPassword, "", new { @class = "text-danger font-weight-bold" }) </div>
        <div class="form-group"> <span class="control-label pl-2 pr-0 font-weight-bold text-black-50">Yeni parola</span> <div class="input-group"> <div class="input-group-prepend rounded-custom"> <span class="input-group-text pl-0 pr-1" style="background-color:transparent; border-color:transparent;" id="basic-addon1"> <a href="" class="font-weight-bold text-black-50" id="show_hide_password"><i id="eye" class="fa fa-eye-slash" aria-hidden="true"></i></a> </span> </div>@Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control font-weight-bold text-black-50", @placeholder = "Yeni parola" } }) </div>@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger font-weight-bold" }) </div>
        <div class="modal-footer pb-0 pt-1"> <button class="btn btn-outline-secondary rounded-custom font-weight-bold btn-block" data-dismiss="modal">Vazgeçtim</button> <input type="submit" value="Değiştir" class="btn btn-outline-purple rounded-custom w-100 font-weight-bold" /> </div>
    </div>
}
<script src="~/js/showhidepass.js"></script>
